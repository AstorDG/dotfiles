// -*- mode: jsonc -*-

// ================ Main ===================

{
	"layer": "top",
	"output": "DP-2",
	"position": "top", 	
	"mode": "dock",
	"margin-top": 10, "margin-bottom": 0,
	"height": 0,

	//power, internet, ram 50%, cpu 15% 45 deg, gpu 15% 45 deg
    "modules-left": [ "battery", "network", "memory", "cpu", "temperatrue","custom/gpu-usage", ],
	// left_workspaces, power, right workspaces
    "modules-center": ["hyprland/workspaces#left", "hyprland/workspaces#right"],
	// systray, music, cava art, time
    "modules-right": [ "clock" ],

// ========================================


// ======= hardware tracking ===============

	"battery": {
		"format": "Û±©ò {power} %",
		"interval": 5
	},

	"network": {
		"format": "Û∞≥ò {bandwidthUpBytes} Û∞±¶ {bandwidthDownBytes}",
		"interval": 3
	},

	"memory": {
		"format": "ÓøÖ {}%",
		"interval": 5
	},

	"cpu": {
		"format": "Ôíº {usage}%",
		"interval": 5
	},

	"temperature": {
		"thermal-zone": 1,
		"format": "{temperatureC}¬∞C Ôãâ",
		"interval": 5
	},

	"custom/gpu-usage": {
		"exec": "cat /sys/class/hwmon/hwmon3/device/gpu_busy_percent",
		"format": "Û∞æ≤ {}%",
		"interval": 5
	},

// =========== Workspaces =================

	"hyprland/workspaces#left": {
		"format": "{name}",
		"ignore-workspaces": [
			"^[02468]$",
			"^[0-9]*[02468]$"
		]
	},

	"hyprland/workspaces#right": {
		"format": "{name}",
		"ignore-workspaces": [
			"^[13579]",
			"^[0-9]*[13579]$"
		]
	},

// ========================================

	"clock": {
		"format": "{:%I:%M}",
		"interval": 60,
		"max-length": 25
	},
}
