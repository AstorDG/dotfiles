# # The config file consists of simple key-value pairs,
# # separated by equals signs.
# font-family = Iosevka
# window-padding-x = 2
#
# # Spacing around the equals sign does not matter.
# # All of these are identical:
# key=value
# key= value
# key =value
# key = value
#
# Any line beginning with a # is a comment. It's not possible to put
# # a comment after a config option, since it would be interpreted as a
# # part of the value. For example, this will have a value of "#123abc":
# background = #123abc

# Display settings
theme = catppuccin-mocha
font-size = 13
font-family = "Jetbrains Mono"
window-decoration = false
background-opacity = 1
background-blur = true
#command = fastfetch

# System settings
confirm-close-surface = false
shell-integration = zsh

# Keybind Section
keybind = alt+r=reset
keybind = alt+shift+r=reload_config
keybind = alt+c=copy_url_to_clipboard
keybind = ctrl+c=copy_to_clipboard
keybind = ctrl+v=paste_from_clipboard
keybind = alt+a=select_all
keybind = alt+shift+c=open_config
keybind = alt+i=inspector:toggle
keybind = super+q=quit
#Window changes
keybind = alt+l=clear_screen
keybind = alt+n=new_window
keybind = alt+shift+w=close_window
#Tab changes
keybind = alt+t=new_tab
keybind = alt+w=close_tab
keybind = ctrl+tab=next_tab
keybind = ctrl+shift+tab=previous_tab
keybind = alt+b=last_tab
keybind = alt+o=toggle_tab_overview
#Split changes
keybind = alt+v=new_split:right
keybind = alt+h=new_split:down
keybind = alt+g=close_surface
keybind = alt+h=goto_split:left
keybind = alt+k=goto_split:up
keybind = alt+j=goto_split:down
keybind = alt+l=goto_split:right
keybind = alt+shift+h=resize_split:left,10
keybind = alt+shift+k=resize_split:up,10
keybind = alt+shift+j=resize_split:down,10
keybind = alt+shift+l=resize_split:right,10
keybind = alt+e=equalize_splits

